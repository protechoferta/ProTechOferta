const fetch = require("node-fetch");

exports.handler = async function(event, context) {
  try {
    const data = JSON.parse(event.body);

    const response = await fetch("https://api.openai.com/v1/chat/completions", {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
        "Authorization": `Bearer ${process.env.OPENAI_API_KEY}`
      },
      body: JSON.stringify({
        model: "gpt-4",
        messages: [
          { role: "system", content: "Jesteś profesjonalnym twórcą ofert handlowych dla firm technicznych." },
          { role: "user", content: `Przygotuj ofertę dla branży: ${data.industry}, klient: ${data.client}, zakres: ${data.scope}, cena: ${data.price}, termin: ${data.deadline}, firma: ${data.company}. Zrób profesjonalny, gotowy dokument.` }
        ]
      })
    });

    const result = await response.json();

    return {
      statusCode: 200,
      body: JSON.stringify({ text: result.choices[0].message.content })
    };

  } catch(err) {
    return { statusCode: 500, body: JSON.stringify({ error: err.message }) };
  }
};
